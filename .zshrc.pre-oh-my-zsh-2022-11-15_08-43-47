printlines(){ #filename line1 [line2]
    if [[ $# -eq 2 ]]; then
        sed -n "$2p" $1
    elif [[ $# -eq 3 ]]; then
        sed -n "$2, $3p" $1
    else
        echo "Usage: printlines filename line1 [line2]"
    fi
}

